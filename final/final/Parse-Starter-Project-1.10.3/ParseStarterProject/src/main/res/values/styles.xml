    <style name="HorizontalLine" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.1sp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="VerticalLine" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">0.1sp </item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="HorizontalLineBlack" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/black_deep</item>
    </style>

    <style name="TextViewSubItemWrapContent" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#9c9c9c</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

</resources>